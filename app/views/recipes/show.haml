%h1 Recipes


- if @recipe.image.attachment
  = image_tag (url_for(@recipe.image)), class: 'img-thumbnail img-products'


%table{:border => 1}
  %tbody

%table{:class => "table table-hover", :border => 1}
  %thead{:class => "thead-dark"}

    %tr
      %th Name
      %th Preparation time
      %th Difficulty
  %tbody
    %tr
      %td= @recipe.name
      %td= @recipe.preparation_time
      %td= @recipe.difficulty

%h4 Nutrition

%table{:class => "table table-hover", :border => 1}
  %thead{:class => "thead-dark"}
    %tr
      %th Calories
      %th Carbohydrates
      %th Protein
      %th Fat


      %tr
        %td= @recipe.calories
        %td= @recipe.carbohydrates
        %td= @recipe.protein
        %td= @recipe.fat

  %tbody
    %tr
      %td= @recipe.calories
      %td= @recipe.carbohydrates
      %td= @recipe.protein
      %td= @recipe.fat


= link_to 'Back', recipes_path

= link_to 'Edit', edit_recipe_path(@recipe)

%br
Rate :
= rating_for @recipe, 'rate', star: 5, disable_after_rate: true, enable_half: true, cancel: true
