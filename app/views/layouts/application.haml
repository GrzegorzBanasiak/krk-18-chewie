%html
  %head
    %title TeamChewie
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        .navbar-brand Lodówka Makłowicza
        .collapse.navbar-collapse{:id => "exCollapsingNavbar"}
          %ul.nav.navbar-nav
            %li.nav-item
              = link_to 'Link 1', root_path, class: 'nav-link'
            %li.nav-item
              = link_to 'Link 2', root_path, class: 'nav-link'
            %li.nav-item
              = link_to 'Link 3', root_path, class: 'nav-link'
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link'
              %li
                .navbar-text
                  = current_user.email
            - else
              %li
                = link_to 'Login', new_user_session_path, class: 'nav-link'
              %li
                = link_to 'Sing Up', new_user_registration_path, class: 'nav-link'
    = yield
