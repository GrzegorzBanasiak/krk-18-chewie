%h1 Product

%table{:class => "table table-hover", :border => 1}
  %thead{:class => "thead-dark"}
    %tr
      %th Name
      %th Calories
      %th Carbohydrates
      %th Protein
      %th Fat
  %tbody
    %tr
      %td= @product.name
      %td= @product.calories
      %td= @product.carbohydrates
      %td= @product.protein
      %td= @product.fat

= link_to 'Back', products_path, class: 'btn btn-primary'

= link_to 'Edit', edit_product_path(@product), class: 'btn btn-primary'
